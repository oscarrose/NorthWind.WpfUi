<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:NorthWind.WpfUi"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:System="clr-namespace:System;assembly=System.Runtime" xmlns:controlzex="urn:controlzex" x:Class="NorthWind.WpfUi.UserControlTerritory"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <materialDesign:TransitioningContent x:Name="TrainsitionOfCOnteent" OpeningEffect="{materialDesign:TransitionEffect SlideInFromLeft, Duration=0:0:0.8}">
            <!--Para la transicion-->




            <StackPanel  Margin="9,-10,-13,0" Background="White">

                <StackPanel Orientation="Horizontal" Margin="10, 10,10,10"  VerticalAlignment="Top" HorizontalAlignment="Left">
                    <!--para el titulo-->
                    <TextBlock Text="Territory" Background="{x:Null}" Foreground="Black" FontWeight="Bold" FontSize="35" HorizontalAlignment="Left"  FontFamily="Arial Rounded MT Bold"/>
                </StackPanel>

                <!--Para los inputs-->
                <Grid VerticalAlignment="Top" Margin="0 10 10 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"></RowDefinition>
                        <RowDefinition Height="50*"></RowDefinition>
                    </Grid.RowDefinitions>


                    <ComboBox Margin="20 0 20 10" Grid.Row="0" FontSize="14"
                                  x:Name="InputRegionId"
                                  Padding="5"
                                   materialDesign:HintAssist.Hint="Region"  materialDesign:HintAssist.Foreground="Black" materialDesign:TextFieldAssist.UnderlineBrush="#00BFFF"
                                Style="{DynamicResource MaterialDesignFloatingHintComboBox}" FontWeight="Normal" FontFamily="Arial" IsEditable="True"
                        
                            >
                        <ComboBoxItem IsSelected="True">
                            Choose region
                        </ComboBoxItem>
                       
                    </ComboBox>
                    <StackPanel VerticalAlignment="Top" Margin="20 -8 0 0" Grid.Row="0">
                        <TextBlock x:Name="RegionIdError" Foreground="red" 
                                   Visibility="Collapsed" />
                    </StackPanel>

                    <TextBox  FontSize="14" Margin="20 5 10 10"
                            materialDesign:HintAssist.Hint="Territory description"  materialDesign:HintAssist.Foreground="Black" materialDesign:TextFieldAssist.UnderlineBrush="#00BFFF"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontWeight="Normal" FontFamily="Arial"
                              Grid.Row="1"
                            
                              x:Name="InputterrirtoryDescription"
                              Padding="5"
                                          
                    />
                    <StackPanel VerticalAlignment="Top" Margin="20 0 0 0" Grid.Row="1">
                        <TextBlock x:Name="TerritoryDescriptionError" Foreground="red" 
                                   Visibility="Collapsed" Grid.Row="1"/>
                    </StackPanel>





                </Grid>

                <!--Para los botones-->
                <Grid HorizontalAlignment="Right" Margin="0 0 10 0" Width="527">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="138*"></ColumnDefinition>
                        <ColumnDefinition Width="138*"></ColumnDefinition>
                        <ColumnDefinition Width="139*"></ColumnDefinition>
                        <ColumnDefinition Width="125*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Button para el crud el de save-->
                    <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" 
                                 HorizontalAlignment="Left" Grid.Column="0" Height="50" 
                                 Margin="7,0,0,0" Width="131">
                        <Button 
                              Style="{DynamicResource MaterialDesignFlatButton}"
                                x:Name="NewTerritoryButton"
                                Foreground="#33684A" Margin="0,15,0,3" Width="98">

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Add" />
                                <TextBlock
                                
                                     Margin="8 0 0 0"
                                      VerticalAlignment="Center"
                                     Text="New"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>


                    <!--Button para el crud el de save-->
                    <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" 
                                 HorizontalAlignment="Left" Grid.Column="1" Height="50" 
                                 Margin="7,0,0,0" Width="131">
                        <Button 
                              Style="{DynamicResource MaterialDesignFlatButton}"
                                x:Name="SaveTerritoryButton"
                                Foreground="#00BFFF" Margin="0,15,0,3" Width="98" Click="SaveTerritoryButton_Click">

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" />
                                <TextBlock
                                
                                     Margin="8 0 0 0"
                                      VerticalAlignment="Center"
                                     Text="Save"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!--Button para el crud el de editar-->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                Height="50" Width="130" >
                        <Button 
                              Style="{DynamicResource MaterialDesignFlatButton}"
                                x:Name="EditTerritoryButton"
                                Foreground="#D98C00" Margin="-3,15,0,3" Width="146" IsEnabled="False" >

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Edit" />
                                <TextBlock
                                
                                     Margin="8 0 0 0"
                                      VerticalAlignment="Center"
                                     Text="Save changes"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>


                    <!--Button para el crud el de Delete-->
                    <StackPanel Grid.Column="3" Orientation="Horizontal"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center" Height="50" Width="134">
                        <Button 
                              Style="{DynamicResource MaterialDesignFlatButton}"
                                x:Name="DeleteTerritoryButton"
                                Foreground="#FF2626"  Margin="-5,15,10,0" Width="98" IsEnabled="False" IsCancel="True" >

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Height="19"/>
                                <TextBlock
                                
                                     Margin="3 0 0 0"
                                      VerticalAlignment="Center"
                                     Text="Delete" Width="93" Height="22"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>


                </Grid>

                <!--Para ver los datos-->


                <DataGrid x:Name="DataGridTerritory"  FontSize="14"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Visible" IsReadOnly="True" 
                              SelectionUnit="FullRow" Margin="10,0,26,10" Height="481" 
                              />













            </StackPanel>


        </materialDesign:TransitioningContent>

    </Grid>
</UserControl>

