                <!--Para mostrar los datos-->
                <Grid Height="630" Margin="10 0 10 10" >

                    <DataGrid x:Name="dtgridproduct"  FontSize="14"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Visible" Margin="10,0,10,0"  
